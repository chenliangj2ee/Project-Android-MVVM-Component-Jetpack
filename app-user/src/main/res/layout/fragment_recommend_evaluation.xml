<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_card_white_radius_10_border_0"
            android:orientation="vertical">

            <include layout="@layout/layout_recommend_module_title" />

            <com.mtjk.view.MyRefreshRecyclerView
                android:id="@+id/recommendTestRefresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:overScrollMode="never"
                app:my_item_layout="@layout/item_recommend_test" />
        </LinearLayout>
    </LinearLayout>
</layout>
