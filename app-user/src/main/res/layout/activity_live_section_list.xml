<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.mtjk.view.MyRefreshRecyclerView
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            app:my_divider_height="1px"
            app:my_divider_marginRight="15dp"
            app:my_divider_marginLeft="15dp"
            app:my_empty_layout="@layout/base_layout_empty"
            app:my_item_layout="@layout/item_my_live_section" />
    </LinearLayout>
</layout>
