<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.HomeFragment">

        <com.mtjk.view.MyRefreshRecyclerView
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:my_divider_color="@color/app_background"
            app:my_divider_height="0dp"
            app:my_empty_layout="@layout/base_layout_empty"
            app:my_item_layout="@layout/item_live_list"
            app:my_layout_manager="gridLayout"
            app:my_span_count="2" />

    </LinearLayout>
</layout>
