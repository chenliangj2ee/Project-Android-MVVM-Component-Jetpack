<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/live_bottom_layout_height"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/live_bottom_message_input_hint"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/live_bottom_layout_height"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/live_bottom_btn_margin"
        android:layout_toStartOf="@id/live_bottom_btn_fun2"
        android:layout_weight="1"
        android:background="@drawable/round_scalable_gray_bg"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingStart="@dimen/live_bottom_edit_padding"
        android:paddingEnd="@dimen/live_bottom_edit_padding"
        android:text="@string/live_bottom_edit_hint"
        android:textAlignment="gravity"
        android:textColor="@color/default_text_color_light"
        android:textSize="@dimen/text_size_medium" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/live_bottom_btn_fun1"
        android:layout_width="@dimen/live_bottom_layout_height"
        android:layout_height="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@id/live_bottom_btn_more"
        android:background="@drawable/round_dark_gray_bg"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/live_bottom_btn_fun2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/live_bottom_btn_margin"
        android:layout_toStartOf="@id/live_bottom_btn_fun1"
        android:background="@drawable/round_dark_gray_bg"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/link"
            android:layout_width="@dimen/live_bottom_layout_height"
            android:layout_height="@dimen/live_bottom_layout_height"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_dark_gray_bg"
            android:src="@drawable/trtc_icon_lianmai" />
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/live_bottom_btn_close"
        android:layout_width="@dimen/live_bottom_layout_height"
        android:layout_height="@dimen/live_bottom_layout_height"
        android:layout_marginRight="15dp"
        android:background="@drawable/round_dark_gray_bg"
        android:src="@drawable/icon_link_quit" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/live_bottom_btn_more"
        android:layout_width="@dimen/live_bottom_layout_height"
        android:layout_height="@dimen/live_bottom_layout_height"
        android:background="@drawable/round_dark_gray_bg"
        android:src="@drawable/live_icon_more" />


</LinearLayout>
