<?xml version="1.0" encoding="utf-8"?><!--tab==直播消息-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/live_message_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/live_message_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/live_message_text_padding_horizontal"
        android:paddingTop="2dp"
        android:paddingEnd="@dimen/live_message_text_padding_horizontal"
        android:lineSpacingExtra="5dp"
        android:paddingBottom="2dp"
        android:textAlignment="gravity"
        android:textSize="12dp" />
</RelativeLayout>
