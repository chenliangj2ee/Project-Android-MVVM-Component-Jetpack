<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_link_mic_list_bg"
        android:gravity="bottom"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:text="画板工具"
                android:textColor="#1F2326"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:src="@drawable/icon_close_link_mic_dialog"
                android:text="申请消息"
                android:textSize="17dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.mtjk.view.MyImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_drawing_noti" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="先使用后结算，以实际使用时长结算"
                android:textColor="#D0021B"
                android:textSize="14dp" />
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp">

            <com.mtjk.view.MyImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_draw_dialog" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:text="画板工具-1分钟"
                android:textColor="#515357"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="65dp"
                android:text="0.0   "
                android:textColor="#A9ADB2"
                android:textSize="12dp" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="#E6F0F2" />

        <LinearLayout
            android:id="@+id/selectUser"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="给谁使用"
                android:textColor="#1F2326"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="给谁使用"
                android:textColor="#A9ADB2"
                android:textSize="14dp" />

            <com.mtjk.view.MyImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/icon_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="15dp"
            android:background="#E6F0F2" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="45dp"
            android:layout_marginTop="110dp"
            android:layout_marginBottom="44dp"
            android:background="@drawable/base_selector_button_dark"
            android:stateListAnimator="@null"
            android:text="发送"
            android:textColor="@drawable/base_selector_color_button_white"
            android:textSize="16dp" />


    </LinearLayout>
</layout>